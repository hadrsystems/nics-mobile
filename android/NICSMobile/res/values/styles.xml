<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:buttonStyle">@style/AppTheme.ButtonStyle</item>
        <item name="android:imageButtonStyle">@style/AppTheme.ImageButtonStyle</item>
        <item name="android:fadeScrollbars">false</item>  
        <item name="android:scrollbarThumbVertical">@drawable/custom_scroll_style</item>
        <item name="android:scrollbarTrackVertical">@drawable/custom_scrolltrack_style</item>
        <item name="android:scrollbarStyle">insideInset</item>
	</style>
	
    <style name="AppTheme.ButtonStyle" parent="@android:style/Widget.Button">
	  <item name="android:background">@drawable/apptheme_btn_default_holo_dark</item>
	  <item name="android:minHeight">48dip</item>
	  <item name="android:minWidth">48dip</item>
	  <item name="android:textColor">#ffffff</item>
    </style>
    
    <style name="AppTheme.ImageButtonStyle" parent="@android:style/Widget.ImageButton">
	  <item name="android:background">@drawable/apptheme_btn_default_holo_dark</item>

    </style>
    
    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="DialogBorder" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/rectangle_border</item>
    </style>
    
    <style name="AppTheme.BlankBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Theme.Dialog" parent="@android:style/Theme.Dialog" />
    
</resources>
