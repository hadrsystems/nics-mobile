<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageButton
        android:id="@+id/MarkupButtonSymbol"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/markup_AddSymbolButton"
        android:maxHeight="48dp"
        android:maxWidth="48dp"
        android:minHeight="48dip"
        android:minWidth="48dip"
        android:src="@drawable/symbol" />

    <ImageButton
        android:id="@+id/MarkupButtonLine"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/MarkupButtonSymbol"
        android:adjustViewBounds="true"
        android:contentDescription="@string/markup_AddLineButton"
        android:maxHeight="48dp"
        android:maxWidth="48dp"
        android:minHeight="48dip"
        android:minWidth="48dip"
        android:src="@drawable/line" />

    <ImageButton
        android:id="@+id/MarkupButtonRectangle"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/MarkupButtonSymbol"
        android:layout_toLeftOf="@+id/MarkupButtonLine"
        android:adjustViewBounds="true"
        android:contentDescription="@string/markup_AddRectangleButton"
        android:maxHeight="48dp"
        android:maxWidth="48dp"
        android:minHeight="48dip"
        android:minWidth="48dip"
        android:src="@drawable/rectangle" />

    <ImageButton
        android:id="@+id/MarkupButtonTrapezoid"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/MarkupButtonSymbol"
        android:layout_toRightOf="@+id/MarkupButtonSymbol"
        android:adjustViewBounds="true"
        android:contentDescription="@string/markup_AddTrapezoidButton"
        android:maxHeight="48dp"
        android:maxWidth="48dp"
        android:minHeight="48dip"
        android:minWidth="48dip"
        android:src="@drawable/trapezoid" />

    <ImageButton
        android:id="@+id/MarkupButtonCircle"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/MarkupButtonRectangle"
        android:layout_toLeftOf="@+id/MarkupButtonTrapezoid"
        android:adjustViewBounds="true"
        android:contentDescription="@string/markup_AddCircleButton"
        android:maxHeight="48dp"
        android:maxWidth="48dp"
        android:minHeight="48dip"
        android:minWidth="48dip"
        android:src="@drawable/circle" />

    <Button
        android:id="@+id/MarkupButtonLRF"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@+id/MarkupButtonTrapezoid"
        android:layout_below="@+id/MarkupButtonTrapezoid"
        android:contentDescription="@string/markup_AddLRFButton"
        android:ellipsize="none"
        android:maxHeight="48dp"
        android:maxWidth="48dp"
        android:minHeight="48dip"
        android:minWidth="48dip"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:text="@string/markup_LRF"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="normal"
        android:visibility="invisible" />

</RelativeLayout>
