			            			    android:layout_gravity="center"
			            			    android:text="23" >

							    </TextView>
				            </LinearLayout>
			            
				        <LinearLayout
			            android:id="@+id/requestBundle4"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:orientation="vertical"
			            android:layout_centerHorizontal="true"
			            android:layout_weight="1" >
				        				        
			            <ImageView
			                android:id="@+id/catanRequestThumbnail4"
			                android:layout_width="48dp"
			                android:layout_height="48dp"
			                android:layout_gravity="center"
			                android:contentDescription="icon"
			                android:maxHeight="48dp"
			                android:maxWidth="48dp"
			                android:padding="2dip"
			                android:src="@drawable/catan_aid_cleanup" />

			            			<TextView
			            			    android:id="@+id/requestCount4"
			            			    android:layout_width="wrap_content"
			            			    android:layout_height="wrap_content"
			            			    android:layout_gravity="center"
			            			    android:text="23" >

							    </TextView>
				            </LinearLayout>
			            
			            
				        <LinearLayout
			            android:id="@+id/requestBundle5"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:orientation="vertical"
			            android:layout_centerHorizontal="true"
			            android:layout_weight="1" >

				            <ImageView
				                android:id="@+id/catanRequestThumbnail5"
				                android:layout_width="48dp"
				                android:layout_height="48dp"
				                android:layout_gravity="center"
				                android:contentDescription="icon"
				                android:maxHeight="48dp"
				                android:maxWidth="48dp"
				                android:padding="2dip"
				                android:src="@drawable/catan_aid_cleanup" />
			            
			            			<TextView
			            			    android:id="@+id/requestCount5"
			            			    android:layout_width="wrap_content"
			            			    android:layout_height="wrap_content"
			            			    android:layout_gravity="center"
			            			    android:text="23" >

							    </TextView>
				            </LinearLayout>
			            
				        <LinearLayout
			            android:id="@+id/requestBundle6"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:orientation="vertical"
			            android:layout_centerHorizontal="true"
			            android:layout_weight="1" >
				        
			            <ImageView
			                android:id="@+id/catanRequestThumbnail6"
			                android:layout_width="48dp"
			                android:layout_height="48dp"
			                android:layout_gravity="center"
			                android:contentDescription="icon"
			                android:maxHeight="48dp"
			                android:maxWidth="48dp"
			                android:padding="2dip"
			                android:src="@drawable/catan_aid_cleanup" />

			            			<TextView
			            			    android:id="@+id/requestCount6"
			            			    android:layout_width="wrap_content"
