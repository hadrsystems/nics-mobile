<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/TabLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/TabLayoutFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/aidTab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="@string/aid"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/holo_green_light"
                android:textStyle="bold" />

            <Button
                android:id="@+id/volunteerTab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="@string/volunteer"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/holo_green_light"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

	    <TextView
	        android:id="@android:id/empty"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" >
	    </TextView>

	        <LinearLayout
	            android:id="@+id/listLinearLayout"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_alignParentLeft="true"
	       
	            android:layout_marginTop="34dp"
	            android:orientation="vertical" >

	            <ListView
	                android:id="@android:id/list"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_marginTop="2dp"
	                android:layout_weight="1" >

	            </ListView>

	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_alignParentTop="true" >
            
			        <LinearLayout
			            android:id="@+id/iconGridLayout"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:orientation="horizontal"
			            android:visibility="visible" >
			            
				        <LinearLayout
			            android:id="@+id/requestBundle1"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:orientation="vertical"
			            android:layout_centerHorizontal="true"
			            android:layout_weight="1" >

				            <ImageView
				                android:id="@+id/catanRequestThumbnail1"
				                android:layout_width="48dp"
				                android:layout_height="48dp"
				                android:layout_gravity="center"
				                android:contentDescription="icon"
				                android:maxHeight="48dp"
				                android:maxWidth="48dp"
				                android:padding="2dip"
				                android:src="@drawable/catan_aid_cleanup" />
				            
								<TextView
								    android:id="@+id/requestCount1"
								    android:layout_width="wrap_content"
								    android:layout_height="wrap_content"
								    android:layout_gravity="center"
								    android:text="23" >

							    </TextView>
				            </LinearLayout>

				        <LinearLayout
			            android:id="@+id/requestBundle2"
			            android:layout_width="wrap_content"
