<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:paddingRight="5dp" >

        <Button
            android:id="@+id/coordinateCancelButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:minWidth="70dp"
            android:text="@string/markup_cancel" />

        <Button
            android:id="@+id/coordinateOkButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:height="32dp"
            android:minWidth="70dp"
            android:text="@string/markup_ok" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/markup_misc_land_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp" >

        <TextView
            android:id="@+id/coordinateColorPickerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/color_picker_title"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/coordinateColorPickerButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
    <include android:id="@+id/include1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_below="@+id/markup_misc_land_layout" layout="@layout/coordinate_decimal"/>

</RelativeLayout>
